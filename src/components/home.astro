---
const { persona } = Astro.props;
---

<div class="p-4 bg-blue-800 min-h-screen">
  <h1 class="text-3xl text-white font-bold text-center mb-16 mt-16">
    Executive Card
  </h1>

  {
    persona ? (
      <>
        <div class="w-full h-full flex flex-col items-center bg-blue-300 py-8">
          <img
            src={persona.imagen}
            alt="Imagen de la persona"
            class="w-48 h-48 rounded-full mx-auto mb-4"
          />
          <div class="text-center">
            <p>
              <strong>
                {persona.nombre} {persona.apellido}
              </strong>
            </p>
            <p>
              <strong>{persona.puesto}</strong>
            </p>
            <p>
              <strong>{persona.correo}</strong>
            </p>
            <p>
              <strong class="underline text-blue-600">
                <a href={`tel:${persona.celular}`}>{persona.celular}</a>
              </strong>
            </p>
            <div class="flex justify-center gap-6 mt-4">
              <a
                href={`https://wa.me/${persona.celular.replace(/\D/g, "")}`}
                target="_blank"
                rel="noopener noreferrer"
                aria-label="Enviar mensaje por WhatsApp"
              >
                <img
                  src="/whatsapp-logo.svg"
                  alt="WhatsApp"
                  class="w-10 h-10 hover:scale-110 transition-transform"
                />
              </a>
              <a href={`mailto:${persona.correo}`} aria-label="Enviar correo">
                <img
                  src="/outlook-logo.svg"
                  alt="Correo"
                  class="w-10 h-10 hover:scale-110 transition-transform"
                />
              </a>
              <a
                href={`/contactos/${persona.id}.vcf`}
                target="_blank"
                aria-label="Guardar contacto"
              >
                <img
                  src="/contactos-logo.svg"
                  alt="Guardar contacto"
                  class="w-10 h-10 hover:scale-110 transition-transform"
                />
              </a>
            </div>
          </div>
        </div>
      </>
    ) : (
      <p class="text-red-500">No se proporcionó información de la persona.</p>
    )
  }
</div>
<style>
  p {
    font-size: 1.5rem;
    margin-top: 1rem;
  }
</style>
